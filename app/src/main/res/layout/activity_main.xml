<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rvFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ảnh hiển thị sau khi chụp -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rvFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView hiển thị trạng thái quyền -->
    <TextView
        android:id="@+id/tvPermissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang kiểm tra quyền camera..."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:background="@android:color/transparent"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/rvFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView lướt filter -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFilters"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:visibility="gone"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/controlLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thanh điều khiển phía dưới -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/bottom_control_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút filter (hiện khi có ảnh) -->
        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:backgroundTint="#333333"
            android:background="@drawable/btn_round_dark"
            android:padding="10dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter"
            android:visibility="gone"
            app:tint="#FFFFFF"
            android:layout_marginHorizontal="12dp" />

        <!-- Nút chụp chính -->
        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_capture_circle"
            android:contentDescription="Capture"
            android:layout_marginHorizontal="20dp" />

        <!-- Nút quay lại (hiện khi xem ảnh) -->
        <ImageButton
            android:id="@+id/btnBackToCamera"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_round_dark"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF"
            android:contentDescription="Quay lại"
            android:visibility="gone"
            android:layout_marginHorizontal="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
