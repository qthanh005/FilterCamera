<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- áº¢nh hiá»ƒn thá»‹ sau khi chá»¥p -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸŸ¢ TextView hiá»ƒn thá»‹ tráº¡ng thÃ¡i quyá»n -->
    <TextView
        android:id="@+id/tvPermissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Äang kiá»ƒm tra quyá»n camera..."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:background="@android:color/transparent"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/controlLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thanh Ä‘iá»u khiá»ƒn phÃ­a dÆ°á»›i -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/bottom_control_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- NÃºt filter (hiá»‡n khi cÃ³ áº£nh) -->
        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:backgroundTint="#333333"
            android:background="@drawable/btn_round_dark"
            android:padding="10dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter"
            android:visibility="gone"
            app:tint="#FFFFFF"
            android:layout_marginHorizontal="12dp" />

        <!-- NÃºt chá»¥p chÃ­nh -->
        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_capture_circle"
            android:contentDescription="Capture"
            android:layout_marginHorizontal="20dp" />

        <!-- NÃºt quay láº¡i (hiá»‡n khi xem áº£nh) -->
        <ImageButton
            android:id="@+id/btnBackToCamera"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_round_dark"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF"
            android:contentDescription="Quay láº¡i"
            android:visibility="gone"
            android:layout_marginHorizontal="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
